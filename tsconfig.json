{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "noEmit": true,
    "baseUrl": ".",
    "rootDir": "."
  },
  "include": [
    "swigfile.ts",
    "src/**/*.ts",
    "test/**/*.test.ts"
  ],
  "exclude": [
    "dist",
    "docs",
    "examples",
    "node_modules",
    "packed"
  ]
}
