{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "outDir": "./dist/esm",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "declaration": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "docs",
    "examples",
    "node_modules",
    "packed",
    "test",
    "temp"
  ]
}
