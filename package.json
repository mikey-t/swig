{
  "name": "swig-cli",
  "version": "0.0.17",
  "description": "Swig is a simple CLI tool for automating dev workflows via compositions of series and parallel tasks.",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikey-t/swig"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.cjs"
      }
    }
  },
  "main": "./dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "bin": {
    "swig": "dist/esm/SwigStartupWrapper.js"
  },
  "files": [
    "package.json",
    "dist/",
    "readme.md",
    "LICENSE"
  ],
  "keywords": [
    "swig",
    "swig-cli",
    "task-runner",
    "cli",
    "automation",
    "devops",
    "build-tool",
    "workflow",
    "composable",
    "parallel-tasks",
    "series-tasks",
    "development",
    "gulp-alternative"
  ],
  "author": "Mike Thompson",
  "license": "MIT",
  "volta": {
    "node": "20.11.1"
  },
  "devDependencies": {
    "@mikeyt23/node-cli-utils": "^2.0.35",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "swig-cli": "^0.0.17",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
