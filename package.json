{
  "name": "swig-cli",
  "version": "0.0.4",
  "description": "Swig is a simple CLI tool for automating dev workflows via compositions of series and parallel tasks.",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikey-t/swig"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.cjs"
      }
    }
  },
  "main": "./dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "bin": {
    "swig-cjs": "dist/cjs/swigCli.cjs",
    "swig": "dist/esm/swigCli.js"
  },
  "scripts": {
    "npmInstallAll": "npm install && node tasks.js npmInstallAll",
    "build": "node tasks.js cleanDist && npm run build:cjs && npm run build:esm && node tasks.js insertVersionNumbers",
    "watch": "tsc --watch",
    "build:cjs": "tsc --p tsconfig.cjs.json && node tasks.js updateCjsOutput",
    "build:esm": "tsc --p tsconfig.json",
    "watchTasks": "tsc --watch --p tsconfig.tasks.json",
    "cleanDist": "node tasks.js cleanDist",
    "pack": "node tasks.js cleanPackedDir && npm pack --pack-destination packed",
    "updateExamples": "npm run build && npm run pack && node tasks.js updateExampleDependencies",
    "updateExamplesAndSmokeTest": "npm run updateExamples && node tasks.js smokeTest",
    "smokeTest": "node tasks.js smokeTest",
    "publishOnly": "npm publish"
  },
  "files": [
    "package.json",
    "dist/",
    "src/",
    "readme.md",
    "LICENSE"
  ],
  "keywords": [
    "swig",
    "swig-cli",
    "task-runner",
    "cli",
    "automation",
    "devops",
    "build-tool",
    "workflow",
    "composable",
    "parallel-tasks",
    "series-tasks",
    "development",
    "gulp-alternative"
  ],
  "author": "Mike Thompson",
  "license": "MIT",
  "volta": {
    "node": "18.17.1"
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "typescript": "^5.2.2"
  }
}
