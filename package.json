{
  "name": "swig-cli",
  "version": "1.0.4",
  "description": "Swig is a simple CLI tool for automating dev workflows via compositions of series and parallel tasks.",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikey-t/swig"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.cjs"
      }
    }
  },
  "main": "./dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "bin": {
    "swig": "dist/SwigStartupWrapper.js"
  },
  "files": [
    "package.json",
    "dist/",
    "src/",
    "readme.md",
    "LICENSE"
  ],
  "keywords": [
    "swig",
    "swig-cli",
    "task-runner",
    "cli",
    "automation",
    "devops",
    "build-tool",
    "workflow",
    "composable",
    "parallel-tasks",
    "series-tasks",
    "development",
    "gulp-alternative"
  ],
  "author": "Mike Thompson",
  "license": "MIT",
  "volta": {
    "node": "24.1.0"
  },
  "devDependencies": {
    "@mikeyt23/node-cli-utils": "^2.0.36",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint": "^8.57.0",
    "rollup": "^4.18.0",
    "swig-cli": "^1.0.3",
    "tslib": "^2.6.2",
    "tsx": "^4.19.4",
    "typescript": "^5.4.5"
  }
}
